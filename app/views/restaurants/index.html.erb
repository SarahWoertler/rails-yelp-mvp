<h1>List of Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= link_to restaurant.name, restaurant_path(restaurant) %> - Adress:
      <%= restaurant.address %> - Phone Number: <%= restaurant.phone_number %> - Category:
      <%= restaurant.category %> - <%= link_to "Add a rating", new_restaurant_review_path(restaurant) %>
      </%>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new restaurant", new_restaurant_path %>
